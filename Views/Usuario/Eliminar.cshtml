@model Biblioteca_Guzman_Geovani.Models.Domain.Usuario

 <form asp-action="EliminarUsuario" method="post"></form>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">

        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p class="fs-5">¿Estás seguro de que deseas eliminar a <strong id="userName"></strong>?</p>
                <p><strong>Este cambio es irreversible.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" asp-action="EliminarUsuario" asp-controller="Usuario" method="post">
                    <input type="hidden" name="id" id="deleteUserId" value="@Model.PkUssario" />
                    <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
                </form>
               

                    <input asp-for="PkUssario" type="hidden" />
                    

            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS y CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


<script>
    function setUserToDelete(userName, userId) {
        document.getElementById('userName').innerText = userName;
        document.getElementById('userIdToDelete').value = userId;
    }
</script>

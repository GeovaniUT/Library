<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Guzmán Geovani</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteca_Guzman_Geovani.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        /* Estilos para el sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: #343a40;
            color: white;
            padding-top: 20px;
        }
        .sidebar a {
            display: block;
            padding: 15px;
            color: white;
            text-decoration: none;
            font-size: 18px;
            transition: 0.3s;
        }
        .sidebar a:hover {
            background: #495057;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3 class="text-center">📚 Biblioteca</h3>
            <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Contact"><i class="fas fa-envelope"></i> Contacto</a>

            <a asp-area="" asp-controller="Settings" asp-action="Index"><i class="fas fa-cog"></i> Configuración</a>
            <a asp-area="" asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i> Usuarios</a>
            <a asp-area="" asp-controller="Help" asp-action="Index"><i class="fas fa-question-circle"></i> Ayuda</a>
        </div>

        <!-- Contenido principal -->
        <div class="content w-100">
            <header class="bg-dark text-white p-3 text-center">
                <h2>Panel de Administración</h2>
            </header>

            <!-- 🔹 Aquí se muestra "Hola Mundo" -->
         @*    <div class="container text-center my-4">
                <h1 class="text-primary">Hola Mundo</h1>
            </div> *@

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted text-center mt-4">
                <div class="container">
                    &copy; 2025 - Biblioteca Guzmán Geovani - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
